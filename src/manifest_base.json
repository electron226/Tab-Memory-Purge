{
    "name"             : "__MSG_extName__@@extensionTitleDebug",
    "description"      : "__MSG_extDescription__",
    "version"          : "2.4.0",
    "manifest_version" : 2,
    "default_locale"   : "en",
    "incognito"        : "split",
    "icons" : {
      "16"  : "img/icons/icon_016.png",
      "48"  : "img/icons/icon_048.png",
      "128" : "img/icons/icon_128.png"
    },
    "browser_action" : {
      "icons" : {
        "19": "img/icons/icon_019.png",
        "38": "img/icons/icon_038.png"
      },
      "default_title" : "__MSG_extName__",
      "default_popup" : "popup.html"
    },
    "options_page" : "options.html",
    "background" : {
        "scripts" : @@backgroundScripts
    },
    "content_scripts" : [
      {
        "matches" : ["http://*/*", "https://*/*"],
        "js" : @@contentScripts
      }
    ],
    "permissions" : [
      "tabs", "storage", "history", "system.memory", "contextMenus",
      "notifications", "webRequest", "webRequestBlocking",
      "http://*/*", "https://*/*"
    ],
    "web_accessible_resources" : [
      "blank.html"
    ]
}
